<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/standart_margin"
    android:elevation="@dimen/little_gap"
    android:id="@+id/activity_Container"
    app:cardCornerRadius="@dimen/standart_margin"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/little_gap"
        >

        <TextView
            android:id="@+id/activity_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="INTAKE / OUTTAKE"
            android:textSize="@dimen/standart_text"
            android:textColor="@color/md_theme_light_primary"
            android:fontFamily="@font/montserrat_alternates_bold"
            />


        <TextView
            android:id="@+id/activity_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_Type"
            android:text="00 : 00 AM / PM"
            android:textSize="@dimen/standart_text"
            android:textColor="@color/md_theme_light_primary"
            android:fontFamily="@font/montserrat_alternates_bold"
            />


        <TextView
            android:id="@+id/activity_Occasion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_Time"
            android:text="What occasion ?"
            android:textSize="@dimen/standart_text"
            android:textColor="@color/md_theme_light_primary"
            android:fontFamily="@font/montserrat_alternates"
            android:layout_marginTop="@dimen/standart_margin"
            />

        <TextView
            android:id="@+id/activity_Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_Occasion"
            android:text="What is the food / exercise ?"
            android:textSize="@dimen/standart_text"
            android:textColor="@color/md_theme_light_primary"
            android:fontFamily="@font/montserrat_alternates"
            />

        <TextView
            android:id="@+id/activity_Calory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="00"
            android:textSize="@dimen/big_margin"
            android:textColor="@color/md_theme_light_primary"
            android:fontFamily="@font/montserrat_alternates_black"
            android:layout_marginEnd="@dimen/standart_margin"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>